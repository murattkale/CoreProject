                                                                                                table.ajax.reload();
                                                                                            }
                                                                                            else {
                                                                                                alerts(resultData.ResultType.MessageList);
                                                                                            }
                                                                                            $(table).LoadingOverlay("hide");
                                                                                        });
                                                                                    }
                                                                                });
                                                                            });
                                                                        },
                                                                        "destroy": true,
                                                                        "caseInsensitive": true,
                                                                        "responsive": true,
                                                                        "pageLength": 10,
                                                                        "DisplayLength": 10,
                                                                        "lengthMenu": [[10, 25, 100, 1000, 2500, 5000], [10, 25, 100, 1000, 2500, 5000]],
                                                                        "lengthChange": true,
                                                                        "processing": true,
                                                                        "order": [[0, "desc"]],
                                                                        "columns": columns,

                                                                    });




                                                                }
                                                            });
